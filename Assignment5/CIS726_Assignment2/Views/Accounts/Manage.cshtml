@model CIS726_Assignment2.ViewModels.LocalPasswordModel
@{
    ViewBag.Title = "Manage Account";
}

<div class="contentbox">
    <div class="liquid_100">
        <h2>Manage Account</h2>
        <hr />
        
        @if(ViewBag.ShowStatus == true){
        <p class="success">@ViewBag.StatusMessage</p>
        }
        <p>You're logged in as <strong>@User.Identity.Name</strong>.</p>
        <p>@Html.ActionLink("Manage Account Settings", "Edit", "Users")</p>
        @Html.Partial("ChangePasswordPartial")
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
