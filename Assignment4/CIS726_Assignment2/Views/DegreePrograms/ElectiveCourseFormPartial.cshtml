@model CIS726_Assignment2.Models.ElectiveCourse
@using HtmlHelpers.BeginCollectionItem

<fieldset>
    @using(Html.BeginCollectionItem("ElectiveCourses")){
    <ol>
        <li>
            Elective List: @Html.TextBox("electiveListName", (Model != null && Model.electiveList != null ? Model.electiveList.electiveListName : ""), new { @class = "eleccourseauto" })  |  
            Semester: @Html.TextBoxFor(model => model.semester, new { @class = "shortField"} )
            @Html.ValidationMessageFor(model => model.semester)  |  
            Credit Hours: @Html.TextBoxFor(model => model.credits, new { @class = "shortField"} )
            @Html.ValidationMessageFor(model => model.credits)  |  
            <a href="#" onclick="$(this).parent().parent().parent().remove(); return false;">Delete Course</a>
            @Html.HiddenFor(model => model.ID)
            @Html.HiddenFor(model => model.electiveListID, new { @class = "eleccourseid" })
            @Html.HiddenFor(model => model.degreeProgramID)
        </li>
    </ol>
    }
</fieldset>