@model IEnumerable<Demo.Models.Task>

<div class="taskTransbox">
    <p>Milestones</p>
    <table class="taskPageTable">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Points)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PointPath.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BonusPoints)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxBonusAwards)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IconLink)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Points)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PointPath.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BonusPoints)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxBonusAwards)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartTimeDisplay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndTimeDisplay)
                </td>
                <td>
                    @{
                        string source = item.IconLink;
                        string altText = item.Description;
                     }
                    <img src="@Url.Content(source)" title="@altText" class="milestoneIcon"/>
                </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id=item.ID })
            </td>
            <td>
                @Html.ActionLink("Update", "Update", new { id=item.ID })
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id=item.ID })
            </td>
            </tr>
        }
    </table>
</div>