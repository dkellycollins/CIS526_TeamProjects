@model Demo.ViewModels.TaskCompleteViewModel
@{
    ViewBag.Title = "CompleteTask";
}

<h2>CompleteTask</h2>

<div>
    <span>
        @Model.TaskName
    </span>
    <br />
    <span>
        @Model.TaskDescription
    </span>

    @using (Html.BeginForm("CompleteTask", "Task", FormMethod.Post, new { @class = "editform" }))
    {
        <input type="hidden" name="TaskToken" value="@Model.TaskToken"/>
        <input type="hidden" name="Source" value="Scoreboard" />
        
        <label>EID:</label>
        <input type="text" name="UserID" />
        <br />
        
        <label>Solution:</label>
        <input type="text" name="Solution" />
        <br />
        
        <input type="submit" />
    }
</div>
